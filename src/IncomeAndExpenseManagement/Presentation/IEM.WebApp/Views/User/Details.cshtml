@model IEM.Business.Models.UserModel

@{
    ViewData["Title"] = "Details";
}

<link href="~/css/homestyles.css" rel="stylesheet" />

<h3>User Details</h3>
<hr />

<div class="row">
    <div class="col">
        <!-- Username input -->
        <div class="form-outline">
            <label asp-for="Username" class="control-label"></label>
            <input asp-for="Username" class="form-control bg-white" readonly />
        </div>
    </div>
    <div class="col">
        <!-- Password input -->
        <div class="form-outline">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control bg-white" readonly />
        </div>
    </div>
</div>
<br />

<input asp-for="Username" class="text-center form-control" style="height:100px; background-color:#FF4F5A; border: 1px solid #FF4F5A; color:white; font-size:45px" readonly />

<br /><br />

<section class="pt-4">
    <!-- Page Features-->
    <div class="row gx-lg-5">

        <!--Income Card-->
        <div class="col-lg-6 col-xxl-4 mb-5">
            <div class="card bg-light h-100" style="border: 1px solid #FF4F5A">
                <div class="card-body text-center p-4 p-lg-5 pt-0 pt-lg-0">
                    <div class="feature bg-gradient text-white rounded-3 mb-4 mt-n4" style="background-color:#FF4F5A">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-coin" viewBox="0 0 16 16">
                          <path d="M5.5 9.511c.076.954.83 1.697 2.182 1.785V12h.6v-.709c1.4-.098 2.218-.846 2.218-1.932 0-.987-.626-1.496-1.745-1.76l-.473-.112V5.57c.6.068.982.396 1.074.85h1.052c-.076-.919-.864-1.638-2.126-1.716V4h-.6v.719c-1.195.117-2.01.836-2.01 1.853 0 .9.606 1.472 1.613 1.707l.397.098v2.034c-.615-.093-1.022-.43-1.114-.9H5.5zm2.177-2.166c-.59-.137-.91-.416-.91-.836 0-.47.345-.822.915-.925v1.76h-.005zm.692 1.193c.717.166 1.048.435 1.048.91 0 .542-.412.914-1.135.982V8.518l.087.02z"/>
                          <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                          <path d="M8 13.5a5.5 5.5 0 1 1 0-11 5.5 5.5 0 0 1 0 11zm0 .5A6 6 0 1 0 8 2a6 6 0 0 0 0 12z"/>
                        </svg>                    
                    </div>
                    <h1 class="mb-0">@ViewBag.TotalIncome</h1>
                    <small>Income</small>
                </div>
            </div>
        </div>

        <!--Expenditure Card-->
        <div class="col-lg-6 col-xxl-4 mb-5">
            <div class="card bg-light h-100" style="border: 1px solid #FF4F5A">
                <div class="card-body text-center p-4 p-lg-5 pt-0 pt-lg-0">
                    <div class="feature bg-gradient text-white rounded-3 mb-4 mt-n4" style="background-color:#FF4F5A">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-cash-stack" viewBox="0 0 16 16">
                            <path d="M1 3a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1H1zm7 8a2 2 0 1 0 0-4 2 2 0 0 0 0 4z" />
                            <path d="M0 5a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V5zm3 0a2 2 0 0 1-2 2v4a2 2 0 0 1 2 2h10a2 2 0 0 1 2-2V7a2 2 0 0 1-2-2H3z" />
                        </svg>
                    </div>
                    <h1 class="mb-0">@ViewBag.TotalExpenditure</h1>
                    <small>Expenditures</small>
                </div>
            </div>
        </div>

        <!--Savings Card-->
        <div class="col-lg-6 col-xxl-4 mb-5">
            <div class="card bg-light h-100" style="border: 1px solid #FF4F5A">
                <div class="card-body text-center p-4 p-lg-5 pt-0 pt-lg-0">
                    <div class="feature bg-gradient text-white rounded-3 mb-4 mt-n4" style="background-color:#FF4F5A">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-bank" viewBox="0 0 16 16">
                          <path d="m8 0 6.61 3h.89a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.5.5H15v7a.5.5 0 0 1 .485.38l.5 2a.498.498 0 0 1-.485.62H.5a.498.498 0 0 1-.485-.62l.5-2A.501.501 0 0 1 1 13V6H.5a.5.5 0 0 1-.5-.5v-2A.5.5 0 0 1 .5 3h.89L8 0ZM3.777 3h8.447L8 1 3.777 3ZM2 6v7h1V6H2Zm2 0v7h2.5V6H4Zm3.5 0v7h1V6h-1Zm2 0v7H12V6H9.5ZM13 6v7h1V6h-1Zm2-1V4H1v1h14Zm-.39 9H1.39l-.25 1h13.72l-.25-1Z"/>
                        </svg>                    </div>
                    <h1 class="mb-0">@ViewBag.Savings</h1>
                    <small>Savings</small>
                </div>
            </div>
        </div>
    </div>
</section>
<br />


<div>
    @Html.ActionLink("Edit", "Edit", new { id=Model.UserID}, new { @class= "link-danger"} ) |
    <a class="link-danger" asp-action="Index">Back to List</a>
</div>
