@model IEM.Business.Models.IncomeModel

@{
    ViewData["Title"] = "Create";
}

<h3>Add Income</h3>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="IncomeID" class="form-control" type="hidden" />
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <input asp-for="UserID" class="form-control" value="@ViewBag.UserID" type="hidden" />

            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="link-danger" asp-action="Index" asp-route-userID="@ViewBag.UserID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
