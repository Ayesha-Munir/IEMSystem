@model IEM.WebApp.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}

<style>
    
    .divider:after,
    .divider:before 
    {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
    }

    .h-custom 
    {
        height: calc(100% - 73px);
    }

</style>

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-95">
            
            <!-- Login Form -->
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form asp-action="Login">
                    <div class="divider d-flex align-items-center my-4">
                        <h4 class="text-center fw-bold mx-3 mb-0" style="color: #004481">Please Login to your Account</h4>
                    </div>

                    <!-- Email Input -->
                    <div class="form-outline mt-5 mb-4">
                        <input asp-for="Email" class="form-control" type="email" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Password Input -->
                    <div class="form-outline mb-4">
                        <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Remember Me Checkbox -->
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="form-check mb-2">
                            <input class="form-check-input" asp-for="RememberMe"/>
                            @Html.DisplayNameFor(model => model.RememberMe)
                        </div>
                    </div>

                    <div class="text-center mt-4 pt-2">
                        <input type="submit" value="Login" class="btn btn-outline-danger" />
                        
                        <!--Sign Up-->
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Don't have an account?
                            <a href="#!" class="link-danger">Register</a>
                        </p>

                    </div>
                </form>
            </div>

            <!--Side Illustration-->
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="~/media/SignIn.jpg"
                     class="img-fluid" alt="Sample image">
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
